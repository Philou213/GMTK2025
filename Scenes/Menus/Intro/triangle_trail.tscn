[sub_resource type="GDScript" id="GDScript_mf6vp"]
script/source = "extends Line2D

@export var speed := 100.0
@export var lifetime := 3.0
var start_lifetime := lifetime

func _process(delta: float) -> void:
	position += Vector2(0, -speed * delta)
	lifetime -= delta
	if lifetime <= 0 :
		queue_free()
		return
	modulate.a = lifetime / start_lifetime - 0.6
"

